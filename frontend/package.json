{
    "name": "tingus",
    "description": "Wonderfull testing application",
    "version": "0.2.8",
    "license": "MIT",
    "main": "main.js",
    "author": "Keyboard Ninjas",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "ng-build": "ng build --build-optimizer=false --prod",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "electron:dev": "electron . --serve",
        "electron": "ng build --build-optimizer=false --prod && electron .",
        "electron-aot": "ng build --prod && electron .",
        "win": "electron-builder -w",
        "publish": "electron-builder build -w -p onTagOrDraft"
        },
    "repository": {
        "type": "git",
        "url": "https://github.com/quantsolutions/ui_test_creator.git"
    },
    "build": {
        "appId": "com.keyboardninjas.tingus",
        "productName": "Tingus",
        "copyright": "Copyright Â© 2018 ${author}",
        "files": [
            "./dist",
            "./renderer",
            "main.js",
            "updater.js"
        ],
        "directories": {
            "output": "release-builds"
        },
        "extraFiles": [
            {
                "from": "../backend/dist",
                "to": "."
            },
            {
                "from": "../apps/test_runner/dist",
                "to": "."
            },
            {
                "from": "../apps/Screenshot_Tool/dist",
                "to": "."
            },
            {
                "from": "../backend/kill_Backend.bat",
                "to": "./kill_Backend.bat"
            }
        ],
        "win": {
            "publish": [
                "github"
            ],
            "publisherName": "Keyboard Ninjas",
            "verifyUpdateCodeSignature": false,
            "icon": "./keyboardninja_ElW_icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "menuCategory": true,
            "installerIcon": "./keyboardninja_ElW_icon.ico",
            "uninstallerIcon": "./keyboardninja_ElW_icon.ico",
            "installerSidebar": "",
            "uninstallerSidebar": ""
        }
    },
    "dependencies": {
        "electron-log": "2.2.14",
        "electron-updater": "2.21.10",
        "font-awesome": "4.7.0",
        "jquery": "3.2.1"
    },
    "devDependencies": {
        "rxjs": "6.1.0",
        "core-js": "2.4.1",
        "@angular/animations": "6.0.0",
        "@angular/common": "6.0.0",
        "@angular/compiler": "6.0.0",
        "@angular/core": "6.0.0",
        "@angular/forms": "6.0.0",
        "@angular/http": "6.0.0",
        "@angular/platform-browser": "6.0.0",
        "@angular/platform-browser-dynamic": "6.0.0",
        "@angular/router": "6.0.0",
        "@angular-devkit/build-angular": "0.6.0",
        "@angular/cli": "6.0.0",
        "@angular/compiler-cli": "6.0.0",
        "@types/jasmine": "2.5.45",
        "@types/node": "6.0.60",
        "codelyzer": "3.0.1",
        "electron": "9.1.0",
        "electron-builder": "20.13.4",
        "jasmine-core": "2.6.2",
        "jasmine-spec-reporter": "4.1.0",
        "karma": "1.7.0",
        "karma-chrome-launcher": "2.1.1",
        "karma-cli": "1.0.1",
        "karma-coverage-istanbul-reporter": "1.2.1",
        "karma-jasmine": "1.1.0",
        "karma-jasmine-html-reporter": "0.2.2",
        "protractor": "5.1.2",
        "ts-node": "3.0.4",
        "tslint": "5.3.2",
        "typescript": "2.7.2",
        "zone.js": "0.8.26"
    }
}
